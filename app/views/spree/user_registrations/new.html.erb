<% @body_id = 'signup' %>
<%= render partial: 'spree/shared/error_messages', locals: { target: @user } %>
<div class="col-lg-12 m-0 p-0">

<div class="row col-md-12 m-0 p-0">
    <div class="col-md-6 m-0 p-0" style="background-image: url(<%= image_url('signup.png')%>); background-size: cover; background-position: center;" >

    </div>
    <div class="col-md-6">
    
    <div id="new-customer" data-hook="login" class=" col-lg-8 offset-lg-2 p-0" style="border: solid 1px black; border-radius: 5px; ">
      <div style="border: solid 1px black; border-radius: 5px; padding-left: 3em; padding-right: 3em">
        <h3 class="text-center mb-4" style="margin-top:80px"><%= Spree.t(:new_customer) %></h3>
        <%= form_for resource, as: :spree_user, url: spree.registration_path do |f| %>
          <div data-hook="signup_inside_form">
            <%= render partial: 'spree/shared/user_form', locals: { f: f, remember_me_field: true } %>
            <div><%= f.submit Spree.t(:sign_up), class: 'btn btn-primary text-dark connexion btn-block spree-btn mt-2' %></div>
          </div>
        <% end %>

        <h3 class=" text-center header-sm spree-mt-medium mb-3 mb-sm-4 mb-xl-4"><%= "Vous avez déjà un compte ?" %></h3>
        <%= link_to "Connexion", spree.login_path, class: 'btn btn-primary text-dark inscription btn-block spree-btn mt-2 spree-mb-large' %>
        <div data-hook="login_extras"></div>
      </div>
    </div>
      
    </div>
</div>
 
</div>