<% cache spree_nav_cache_key('footer') do %>

  <div class="d-md-block d-none mt-3" > 
            <div class="newsfooter col-12 align-middle" style="padding-left:30px; padding-right:30px">
            <h2 class="mt-3">S'inscrire à notre newsletter</h2>
          <div><p class="mb-4 " style="font-weight:bold">Inscrivez vous à notre newsletter pour être le premier averti de toutes nos nouveautés</p> </div>
          <form method="POST" action="">
              <div class="pb-1 col-md-12"> <input type="text" class="nwlterBTn" size="60" name="email" placeholder="email@example.com"> <input class="nwlterBTnSubmit" type="submit" value="S'abonner"></div>
              <hr class=" hrnews">
          </form>
      </div>
  
  </div>
  
  <footer id="footer" class="pt-2 mx-auto footer-spree" data-turbolinks-permanent style="background-color:#225828  ">
  
  <div class="container">
   
      <div class="row d-none d-xl-flex text-uppercase  footer-spree-menu-links mt-3 mb-3">
        <% if spree.respond_to?(:account_path) %>
          <div class="col-3 ">
            <%= image_tag "logo.png", width: "250px", class: "img-fluid" %>
          </div>
        <% end %>
        <% if spree_navigation_data.any? %>
          <% spree_navigation_data.first(3).each do |root| %>
            <div class="col-3">
              <div class="footer-spree-label">
                <%= link_to root[:title], root[:url] %>
              </div>
              <% if  root[:items].present? %>
                <% root[:items].each do |item| %>
                  <div class="pt-2"><%= link_to item[:title], item[:url] %></div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      
      </div>
    </div>
    <%= render 'spree/shared/copyright' %>
  </footer>
<% end %>
